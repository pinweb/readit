{
    "name": "pinweb/readit",
    "description": "TJAD Reader Package",
    "keywords": [
        "Pinweb",
        "laravel",
        "readit"
    ],
    "homepage": "https://github.com/pinweb/readit",
    "license": "MIT",
    "authors": [
        {
            "name": "atan",
            "email": "tanshiqi@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/laravel-package-tools": "^1.13.0",
        "illuminate/contracts": "^9.0 | ^10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "files": ["src/readit_functions.php"],
        "psr-4": {
            "Pinweb\\Readit\\": "src",
            "Pinweb\\Readit\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pinweb\\Readit\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Pinweb\\Readit\\ReaditServiceProvider"
            ],
            "aliases": {
                "Readit": "Pinweb\\Readit\\Facades\\Readit"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}